# Deepgram API (required for online STT)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# LLM Providers (optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Fish Audio API (Fish Speech V1.5 cloud TTS)
# Get API key from: https://fish.audio
FISH_SPEECH_API_KEY=your_fish_audio_api_key_here
FISH_SPEECH_REFERENCE_ID=  # Optional: Voice reference ID for voice cloning

# Fish Speech Local Model (optional, requires Python 3.12+)
FISH_SPEECH_MODEL_PATH=

# Voice Loop Configuration
VOICE_LOOP_MODE=hybrid  # online, offline, or hybrid
STT_PROVIDER=deepgram   # deepgram or whisper
LLM_PROVIDER=           # openai, anthropic, local, or empty for echo mode
